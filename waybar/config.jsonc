    },
    "custom/schedule": {
        "exec": "SCHEDULE_DAY=A $HOME/.config/waybar/scripts/schedule.py",
        "interval": 60
    },
    "hyprland/workspaces": {
        "disable-click": true,
    },
    "hyprland/window": {
        "max-length": 1000
